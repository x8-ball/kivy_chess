#:kivy 1.0.9

<Tile>:
    size: self.width,self.height
    canvas.before:
        Color:
            rgb: self.rgb
        Rectangle:
            pos:self.pos
            size:self.size
<Figure>:
    size: 55,55
    background_color: 1, 0, 0, 1
    Image:
        id: symbol
        source: './view/standard_theme/figures/black_figure.png'
        
        size: 45, 45
        center_x: self.parent.center_x
        center_y: self.parent.center_y
        allow_stretch: True

<Game>:                     
    Label:
        font_size: 60
        center_x: root.width / 2
        top: root.top
        text: "Chess Game"
